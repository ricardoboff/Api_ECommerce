// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}


// usu√°rio
model User {
  id        String     @id
  name      String
  email     String
  password  String
  address   String
  city      String
  uf        String
  purchases Purchase[]
}

// marca
model Brand {
  id  Int @id @default(autoincrement())      
  name  String
  products Product[]
}

// produto
model Product {
  id  String  @id
  description String
  unitValue Decimal
  qtd Int
  brandId Int
  brand Brand @relation(fields: [brandId], references: [id])
  items PurchaseItems[]
}

// compra
model Purchase {
  id String @id
  userId String
  user User @relation(fields: [userId], references: [id])
  totalValue Decimal
  items PurchaseItems[]
}

// itens da compra
model PurchaseItems {
  id Int @id @default(autoincrement())
  purchaseId String
  purchase Purchase @relation(fields: [purchaseId], references: [id])
  productId String
  product Product @relation(fields: [productId], references: [id])
  qtd Int
  unitValue Decimal
}